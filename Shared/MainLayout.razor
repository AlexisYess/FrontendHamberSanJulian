@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout Class="red lighten-4">
    <MudAppBar Elevation="1" Class="pink">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Warning" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudText Typo="Typo.h5" Class="ml-3"> Hamber Burger</MudText>
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End"/>

    </MudAppBar>

    <MudDrawer Class="pa-4 Pink lighten-4 shades-text text-Black"  @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always"Elevation="2">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="pa-6">
            @Body
        </MudContainer> 
    </MudMainContent>

</MudLayout>
@code{
    bool _drawerOpen = true;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
