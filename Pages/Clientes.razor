@page "/clientes"
@using Models
@using Services
@inject IClienteService  ClienteService


<MudText Typo="Typo.h3">Hamburguesas sv</MudText>

<MudGrid>
    @foreach (var item in client)
    {
        <MudItem xs="12" sm="10" md="6" lg="4">
            <MudCard>
                <MudCardHeader Class="blue darken-1">
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@item.Nombre</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                        <MudText Typo="Typo.h6">@item.Apellido</MudText>
                </MudCardContent>
                <MudCardContent>
                        <MudText Typo="Typo.h6">@item.Email</MudText>
                </MudCardContent>
                <MudCardHeader Class="blue darken-1">
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">@item.Status</MudText>
                        
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                        <MudText Typo="Typo.h6">@item.Fecha</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary"> ver Clientes</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>




@code {
    IEnumerable<Cliente> client = new List<Cliente>();
    protected override async Task OnInitializedAsync()
    {
        client = await ClienteService.GetAll();
    }
}